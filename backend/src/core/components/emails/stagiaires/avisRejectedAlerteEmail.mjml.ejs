<mjml>
    <%- include('../common/head.mjml.ejs'); %>

    <mj-body background-color="#f0f0f0">

        <%- include('../common/header.mjml.ejs', { utils }); %>

        <mj-wrapper css-class="wrapper">
            <mj-section>
                <mj-column>
                    <mj-text css-class="text-primary">
                        Nous avons bien pris en compte votre commentaire
                    </mj-text>

                    <mj-text css-class="text-secondary">
                        Bonjour <%= stagiaire.individu.prenom %> <%= stagiaire.individu.nom %>,
                    </mj-text>

                    <mj-text css-class="text-secondary">
                        Nous vous informons que nous allons prendre contact avec
                        "<%= stagiaire.formation.action.organisme_formateur.raison_sociale %>"
                        suite au commentaire que vous avez déposé sur "<%= stagiaire.formation.intitule %>".
                    </mj-text>

                    <%- include('../common/signature.mjml.ejs'); %>

                </mj-column>
            </mj-section>
        </mj-wrapper>

        <%- include('./footer.mjml.ejs', { utils }); %>

    </mj-body>
</mjml>
