{
  "extends": [
    "../.eslintrc.json",
    "plugin:mocha/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "mocha/no-mocha-arrows": "off",
    "mocha/no-setup-in-describe": "off",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-top-level-hooks": "off",
    "mocha/no-hooks-for-single-case": "off"
  }
}
